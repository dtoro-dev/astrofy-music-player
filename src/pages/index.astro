---
import Greetings from "@/components/svelte/Greetings.svelte";
import PlayListItemCard from "@/components/astro/PlayListItemCard.astro";
import Layout from "@/layouts/Layout.astro";
import { playlists } from "@/lib/data";
---

<Layout title="Astrofy Music">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-blue-600"
  >
    <!-- <PageHeader /> -->
    <div class="relative z-10 px-6">
      <Greetings />
      <div class="flex flex-wrap mt-6 gap-4">
        {playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)}
      </div>
    </div>

    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/90 -z-1"
    >
    </div>
  </div>
</Layout>

